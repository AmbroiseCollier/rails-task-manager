<p>MY TASKS</p>
<br>



<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>

      <% if task.completed == true  %>
      <i class="fa-solid fa-square-check"></i>
        <% else %>
      <i class="fa-light fa-square"></i>
      <% end %>
          <%= link_to destroy_task_path(task), method: :delete, data: { confirm: "Are you sure"} do %>
      <i class="fa fa-sign-out"></i>
      <% end %>
    </li>
      <% end %>
</ul>


